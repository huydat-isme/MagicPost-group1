generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// schema.prisma

// schema.prisma
// schema.prisma
model Location {
  id        Int      @id @default(autoincrement())
  province  String   @db.VarChar(255)
  city      String   @db.VarChar(255)
  gathering GatheringPoint[] 
  distribution DistributionPoint[]
  @@map(name: "location")
}

model Order {
  order_id         Int               @id @default(autoincrement())
  status           String            @db.VarChar(50)
  comment          String?
  sender_name      String            @db.VarChar(255)
  sender_phone     String            @db.VarChar(20)  
  sender_location  String            @db.VarChar(255)
  receiver_name    String            @db.VarChar(255)
  receiver_phone   String            @db.VarChar(20)
  receiver_location String           @db.VarChar(255) 
  code             String            @db.VarChar(20)
  gathering        GatheringPoint[]
  distribution     DistributionPoint[]
  details          OrderDetail[]
    @@map(name: "order")
}

model OrderDetail {
  order_details_id Int     @id @default(autoincrement())
  order_id         Int?
  package_name     String  @db.VarChar(255)
  quantity         Int
  weight           Decimal @db.Decimal(10, 2)  
  price            Decimal @db.Decimal(10, 2)
  order            Order?  @relation(fields: [order_id], references: [order_id])
  @@map(name: "order_details")
}

model GatheringPoint {
  id                  Int       @id @default(autoincrement())
  gathering_location   Location? @relation(fields: [gathering_location_id], references: [id])
  gathering_location_id Int?
  gathering_user        User?    @relation(fields: [gathering_user_id], references: [id]) 
  gathering_user_id     Int?
  gathering_order Order? @relation(fields: [gathering_order_id], references: [order_id])
  gathering_order_id    Int?  
  @@map(name: "gathering_point")
}

model DistributionPoint {
  id                    Int       @id @default(autoincrement())
  distribution_location   Location? @relation(fields: [distribution_location_id], references: [id])
  distribution_location_id Int? 
  distribution_user        User?    @relation(fields: [distribution_user_id], references: [id])
  distribution_user_id     Int?
  distribution_order Order? @relation(fields: [distribution_order_id], references: [order_id])   
  distribution_order_id    Int?
  @@map(name: "distribution_point")
}

model User {
  id        Int    @id @default(autoincrement()) 
  username  String @db.VarChar(255)
  phone     String @db.VarChar(20)
  password  String @db.VarChar(255)
  role      String @db.VarChar(50)
  gathering GatheringPoint[]
  distribution DistributionPoint[]  
  @@map(name: "user")
}